# Server
PORT=443
# Optional HTTP to HTTPS redirect (comment to disable)
HTTP_REDIRECT_PORT=80

# TLS certificate and key (absolute paths)
HTTPS_CERT_PATH=/etc/letsencrypt/live/example.com/fullchain.pem
HTTPS_KEY_PATH=/etc/letsencrypt/live/example.com/privkey.pem

# App
SITE_BASE_URL=https://example.com
INTERNAL_API_BASE=http://127.0.0.1:8000
JWT_SECRET=change-this-in-production
DEFAULT_DAILY_LIMIT=50

# Mailtrap API (preferred)
MAILTRAP_TOKEN=your_mailtrap_api_token
MAILTRAP_SENDER_EMAIL=no-reply@example.com
MAILTRAP_SENDER_NAME="ROMA Auth Proxy"

# Environment
NODE_ENV=production